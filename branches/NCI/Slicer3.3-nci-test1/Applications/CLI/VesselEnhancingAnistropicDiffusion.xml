<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>Filtering.Denoising</category>
  <title>Vessel Enhancing Anisotropic Diffusion </title>
  <description>
   This runs the Vessel Enhancing Diffusion algorithm as described in the Insight Journal Paper Id 314
</description>
  <version>0.1.0.$Revision: 2104 $(alpha)</version>
  <documentation-url></documentation-url>
  <license></license>
  <contributor></contributor>
  <acknowledgements></acknowledgements>

 <parameters>
    <label>Vessel Enhancing Anisotropic Diffusion Parameters</label>
    <description>Parameters for the Vessel Enhancing Anisotropic Diffusion</description>

    <double>
      <name>Alpha</name>
      <longflag>--Alpha</longflag>
      <description>Alpha</description>
      <label>Alpha</label>
      <default>0.5</default>
      <constraints>
        <minimum>0</minimum>
      </constraints>
    </double>

    <double>
      <name>Beta</name>
      <longflag>--Beta</longflag>
      <description>Beta</description>
      <label>Beta</label>
      <default>0.5</default>
      <constraints>
        <minimum>0</minimum>
      </constraints>
    </double>

    <double>
      <name>Gamma</name>
      <longflag>--Gamma</longflag>
      <description>Gamma</description>
      <label>Gamma</label>
      <default>5.0</default>
      <constraints>
        <minimum>0</minimum>
      </constraints>
    </double>

    <double>
      <name>C</name>
      <longflag>--C</longflag>
      <description>C</description>
      <label>C</label>
      <default>10.0e-6</default>
      <constraints>
        <minimum>0</minimum>
      </constraints>
    </double>

    <boolean>
      <name>ScaleVesselnessMeasure</name>
      <longflag>--ScaleVesselnessMeasure</longflag>
      <description>Scale Vesselness Measure</description>
      <label>Scale Vesselness Measure</label>
      <default>false</default>
    </boolean>

    <double>
      <name>StartScale</name>
      <longflag>--StartScale</longflag>
      <description>Start Scale</description>
      <label>StartScale</label>
      <default>0.300</default>
      <constraints>
        <minimum>.001</minimum>
      </constraints>
    </double>

   <double>
      <name>StopScale</name>
      <longflag>--StopScale</longflag>
      <description>Stop Scale</description>
      <label>Stop Scale</label>
      <default>2.000</default>
      <constraints>
        <minimum>.001</minimum>
      </constraints>
    </double>

    <integer>
      <name>NumberOfScales</name>
      <longflag>--NumberOfScales</longflag>
      <description>Number Of Scales</description>
      <label>Number Of Scales</label>
      <default>5</default>
      <constraints>
        <minimum>1</minimum>
        <maximum>100</maximum>
        <step>1</step>
      </constraints>
    </integer>

    <double>
      <name>Epsilon</name>
      <longflag>--Epsilon</longflag>
      <description>Epsilon</description>
      <label>Epsilon</label>
      <default>0.01</default>
      <constraints>
        <minimum>0</minimum>
      </constraints>
    </double>

    <double>
      <name>Omega</name>
      <longflag>--Omega</longflag>
      <description>Omega</description>
      <label>Omega</label>
      <default>25.0</default>
      <constraints>
        <minimum>0</minimum>
      </constraints>
    </double>

    <double>
      <name>Sensitivity</name>
      <longflag>--Sensitivity</longflag>
      <description>Sensitivity</description>
      <label>Sensitivity</label>
      <default>5.0</default>
      <constraints>
        <minimum>0</minimum>
      </constraints>
    </double>

    <double>
      <name>TimeStep</name>
      <longflag>--TimeStep</longflag>
      <description>Time Step</description>
      <label>Time Step</label>
      <default>0.001</default>
      <constraints>
        <minimum>.001</minimum>
        <maximum>1</maximum>
        <step>.001</step>
      </constraints>
    </double>

    <integer>
      <name>NumberOfIterations</name>
      <longflag>--NumberOfIterations</longflag>
      <description>Number of iterations</description>
      <label>Iterations</label>
      <default>1</default>
      <constraints>
        <minimum>1</minimum>
        <maximum>30</maximum>
        <step>1</step>
      </constraints>
    </integer>

  </parameters>
  
  <parameters>
    <label>IO</label>
    <description>Input/output parameters</description>
    <image>
      <name>inputVolume</name>
      <label>Input Volume</label>
      <channel>input</channel>
      <index>0</index>
      <description>Input volume to be filtered</description>
    </image>
    <image>
      <name>outputVolume</name>
      <label>Output Volume</label>
      <channel>output</channel>
      <index>1</index>
      <description>Output filtered</description>
    </image>
  </parameters>

</executable>
