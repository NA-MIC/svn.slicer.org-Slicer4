<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>Filtering.Denoising</category>
  <title>Vesselness Measure</title>
  <description>
   The Vesselness Measure algorithm as described in the Insight Journal Paper Id 163.
</description>
  <version>0.1.0.$Revision: 2104 $(alpha)</version>
  <documentation-url></documentation-url>
  <license></license>
  <contributor></contributor>
  <acknowledgements></acknowledgements>

 <parameters>
    <label>Vesselness Measure Parameters</label>
    <description>Vesselness Measure</description>

    <double>
      <name>Alpha</name>
      <longflag>--Alpha</longflag>
      <description>Alpha</description>
      <label>Alpha</label>
      <default>0.5</default>
      <constraints>
        <minimum>0</minimum>
      </constraints>
    </double>

    <double>
      <name>Beta</name>
      <longflag>--Beta</longflag>
      <description>Beta</description>
      <label>Beta</label>
      <default>0.5</default>
      <constraints>
        <minimum>0</minimum>
      </constraints>
    </double>

    <double>
      <name>Gamma</name>
      <longflag>--Gamma</longflag>
      <description>Gamma</description>
      <label>Gamma</label>
      <default>5.0</default>
      <constraints>
        <minimum>0</minimum>
      </constraints>
    </double>

    <double>
      <name>C</name>
      <longflag>--C</longflag>
      <description>C</description>
      <label>C</label>
      <default>10.0e-6</default>
      <constraints>
        <minimum>0</minimum>
      </constraints>
    </double>

    <boolean>
      <name>ScaleVesselnessMeasure</name>
      <longflag>--ScaleVesselnessMeasure</longflag>
      <description>Scale Vesselness Measure</description>
      <label>Scale Vesselness Measure</label>
      <default>true</default>
    </boolean>

    <double>
      <name>StartScale</name>
      <longflag>--StartScale</longflag>
      <description>Start Scale</description>
      <label>Start Scale</label>
      <default>0.200</default>
      <constraints>
        <minimum>.001</minimum>
      </constraints>
    </double>

   <double>
      <name>StopScale</name>
      <longflag>--StopScale</longflag>
      <description>Stop Scale</description>
      <label>Stop Scale</label>
      <default>2.000</default>
      <constraints>
        <minimum>.001</minimum>
      </constraints>
    </double>

    <integer>
      <name>NumberOfScales</name>
      <longflag>--NumberOfScales</longflag>
      <description>Number Of Scales</description>
      <label>Number Of Scales</label>
      <default>10</default>
      <constraints>
        <minimum>1</minimum>
        <maximum>100</maximum>
        <step>1</step>
      </constraints>
    </integer>

  </parameters>
  
  <parameters>
    <label>IO</label>
    <description>Input/output parameters</description>
    <image>
      <name>inputVolume</name>
      <label>Input Volume</label>
      <channel>input</channel>
      <index>0</index>
      <description>Input volume to be filtered</description>
    </image>
    <image>
      <name>outputVolume</name>
      <label>Output Volume</label>
      <channel>output</channel>
      <index>1</index>
      <description>Output filtered</description>
    </image>
  </parameters>

</executable>
