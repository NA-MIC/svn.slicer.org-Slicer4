<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>Diffusion.Diffusion Tensor Images</category>
  <title>Fiber Hierarchy Scalar Measurements</title>
  <description><![CDATA[Compute a set of different scalar measurements from a directory of fibers]]></description>
  <version>0.1.0.$Revision: 2014</version>
  <documentation-url>http://wiki.slicer.org/slicerWiki/index.php/Documentation/4.3/Modules/DiffusionTensorMathematics</documentation-url>
  <license/>
  <contributor>Alex Yarmarkovich (SPL, BWH)</contributor>
  <acknowledgements><![CDATA[LMI]]></acknowledgements>
  <parameters>
    <label>IO</label>
    <description><![CDATA[Input/output parameters]]></description>

    <string-enumeration>
      <name>inputType</name>
      <flag>i</flag>
      <longflag>--inputtype</longflag>
      <description><![CDATA[Type of input hierarchy scene or polydata directory]]></description>
      <label>Input Type</label>
      <default>Hierarchy</default>
      <element>Hierarchy</element>
      <element>Folder</element>
    </string-enumeration>

    <geometry aggregate="true" fileExtensions=".mrml" multiple="true">
      <name>FiberSceneFile</name>
      <channel>input</channel>
      <label>Fibers Hierarchy</label>
      <longflag>--fiberSceneFile</longflag>
      <description><![CDATA[Fibers, under a model hierarchy node. Fibers are imported from Slicer under a model hierarchy node. If you're running from the command line, a top hierarchy node in mrml scene.]]></description>
    </geometry>

    <directory>
      <name>InputDirectory</name>
      <label>Input Directory</label>
      <channel>input</channel>
      <longflag>--inputdirectory</longflag>
      <description><![CDATA[Directory from which to read fibers]]></description>
    </directory>
    <file>
      <name>outputFile</name>
      <label>Output file</label>
      <channel>output</channel>
      <longflag>--outputfile</longflag>
      <description>Output measurement file</description>
    </file>
  </parameters>
  <parameters>
    <label>Operation</label>
    <description><![CDATA[Scalar Measurements]]></description>
    <string-enumeration>
      <name>operation</name>
      <flag>e</flag>
      <longflag>enumeration</longflag>
      <description><![CDATA[An enumeration of strings]]></description>
      <label>Scalar Maps</label>
      <default>FractionalAnisotropy</default>
      <element>Trace</element>
      <element>Determinant</element>
      <element>RelativeAnisotropy</element>
      <element>FractionalAnisotropy</element>
      <element>Mode</element>
      <element>LinearMeasure</element>
      <element>PlanarMeasure</element>
      <element>SphericalMeasure</element>
      <element>MinEigenvalue</element>
      <element>MidEigenvalue</element>
      <element>MaxEigenvalue</element>
      <element>MaxEigenvalueProjectionX</element>
      <element>MaxEigenvalueProjectionY</element>
      <element>MaxEigenvalueProjectionZ</element>
      <element>RAIMaxEigenvecX</element>
      <element>RAIMaxEigenvecY</element>
      <element>RAIMaxEigenvecZ</element>
      <element>MaxEigenvecX</element>
      <element>MaxEigenvecY</element>
      <element>MaxEigenvecZ</element>
      <element>D11</element>
      <element>D22</element>
      <element>D33</element>
      <element>ParallelDiffusivity</element>
      <element>PerpendicularDiffusivity</element>
    </string-enumeration>
  </parameters>
</executable>
