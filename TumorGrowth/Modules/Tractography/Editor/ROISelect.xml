<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>
  Tractography.Editor
  </category>
  <title>
  ROISelect
  </title>
  <description>
  Select tracts using ROIs (regions of interest)
  </description>
  <version>0.1.0.$Revision: 1892 $(alpha)</version>
  <documentation-url></documentation-url>
  <license></license>
  <contributor>Lauren O'Donnell</contributor>
  <acknowledgements>BWH, NCIGT/LMI</acknowledgements>

  <parameters>
    <label>IO</label>
    <description>Input/output parameters</description>
    <image type ="label">
      <name>InputROI_A</name>
      <label>Input ROI A</label>
      <channel>input</channel>
      <index>0</index>
      <description>Label map with selection ROI 1</description>
    </image>
    <image type ="label">
      <name>InputROI_B</name>
      <label>Input ROI B</label>
      <channel>input</channel>
      <index>1</index>
      <description>Label map with selection ROI 2</description>
    </image>
    <geometry>
      <name>InputFibers</name>
      <label>Input Fiber bundle</label>
      <channel>input</channel>
      <index>2</index>
      <description>Input tractography</description>
    </geometry>
    <geometry>
      <name>OutputFibers</name>
      <label>Output Fiber bundle</label>
      <channel>output</channel>
      <index>3</index>
      <description>Selected tractography result</description>
    </geometry>
  </parameters>
  
  <parameters>
    <label>ROI definition</label>
    <description>Selection of label/s for ROI definition</description>
    
    <integer>
      <name>ROIlabel</name>
      <label> ROI label</label>
      <flag>-l</flag>
      <longflag>--label</longflag>
      <description>ROI label value that defines seeding region.</description>
      <default>1</default>
    </integer>
  </parameters>  
</executable>
